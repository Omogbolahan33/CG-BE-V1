// tsconfig.json

{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                                  /* Specify ECMAScript target version */
    "module": "CommonJS",                                /* Specify module code generation */
    "rootDir": "./",                                     /* Specify the root directory of source files. */
    "moduleResolution": "node",                          /* Resolve modules using Node.js style */
    "esModuleInterop": true,                             /* Enables compatibility for default imports */
    "forceConsistentCasingInFileNames": true,            /* Ensure consistent use of casing in file names */
    "strict": true,                                      /* Enable all strict type-checking options */
    "skipLibCheck": true,                                /* Skip type checking all .d.ts files. */
    
    /* Output Options */
    "outDir": "./dist",                                  /* Specify an output directory for compiler to place built structure. */
    "sourceMap": true,                                   /* Create source map files for debugging */
    
    /* Advanced Options */
    "resolveJsonModule": true,                           /* Allows importing modules with a '.json' extension */
    "baseUrl": ".",                                      /* Base directory to resolve non-absolute module names */
  },
  "include": [
    "server.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
