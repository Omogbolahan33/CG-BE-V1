{
  "name": "social-marketplace-api",
  "version": "1.0.0",
  "description": "API for Social Marketplace",
  "main": "dist/server.js", // The compiled output will be here
  "scripts": {
    "start": "node dist/server.js", // Production: Runs the compiled JS
    "dev": "ts-node-dev --respawn server.ts", // Development: Runs the TS source file in the root
    "build": "tsc",
    "prisma:generate": "prisma generate",
  },
  "dependencies": {
    "@prisma/client": "^5.x.x",
    "dotenv": "^16.x.x",
    "express": "^4.x.x"
  },
  "devDependencies": {
    "@types/express": "^4.x.x",
    "@types/node": "^20.x.x",
    "prisma": "^5.x.x",
    "ts-node": "^10.x.x",
    "ts-node-dev": "^2.x.x",
    "typescript": "^5.x.x"
  }
}
